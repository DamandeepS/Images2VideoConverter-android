<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.techaspect.images2videoconverter.ImageViewer">

    <android.opengl.GLSurfaceView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewer"
        app:layout_constraintLeft_toLeftOf="@+id/activity_image_viewer"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_image_viewer"
        app:layout_constraintRight_toRightOf="@+id/activity_image_viewer"
        app:layout_constraintBottom_toBottomOf="@+id/activity_image_viewer"
        tools:layout_constraintBottom_creator="1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/activity_image_viewer"
        app:layout_constraintTop_toTopOf="@+id/activity_image_viewer"
        app:layout_constraintRight_toRightOf="@+id/activity_image_viewer"
        app:layout_constraintBottom_toBottomOf="@+id/activity_image_viewer"
        app:layout_constraintVertical_bias="1.0">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
